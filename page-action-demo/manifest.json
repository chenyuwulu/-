{
	"manifest_version": 2,
	"name": "这里是名字",
	"version": "1.0.1",
	"description": "这里是备注，反正属于可以写长点的那种",
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"page_action":
	{
		"default_icon": "img/icon.png",
		"default_title": "这个是鼠标移上去显示的",
		"default_popup": "popup.html"
	},
	"permissions":
	[
		"declarativeContent"
	],
	"background":
	{
		"scripts": ["js/background.js"]
	}
}